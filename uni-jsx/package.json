{
  "name": "@redneckz/uni-jsx",
  "version": "2.0.0",
  "license": "MIT",
  "type": "module",
  "module": "./lib/index.js",
  "main": "./dist/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "./jsx-runtime": "./jsx-runtime.js",
    ".": {
      "import": "./lib/index.js",
      "require": "./dist/index.js",
      "types": "./lib/index.d.ts"
    },
    "./lib/setup*": {
      "import": "./lib/setup*.js",
      "require": "./dist/setup*.js",
      "types": "./lib/setup*.d.ts"
    },
    "./lib/hooks": {
      "import": "./lib/hooks/index.js",
      "require": "./dist/hooks/index.js",
      "types": "./lib/hooks/index.d.ts"
    },
    "./lib/hooks/*": {
      "import": "./lib/hooks/*.js",
      "require": "./dist/hooks/*.js",
      "types": "./lib/hooks/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prebuild": "rimraf ../node_modules/@types/react ../node_modules/@types/react-dom",
    "build": "npm run build:commonjs && npm run build:lib",
    "postbuild": "npm i --prefix .. && npm run size",
    "build:commonjs": "rimraf ./dist && tsc --noImplicitUseStrict",
    "build:lib": "rimraf ./lib && tsc --module esnext --noImplicitUseStrict --outDir ./lib",
    "postbuild:lib": "replace-in-file --configFile=replace-config.lib.cjs",
    "test": "jest",
    "size": "size-limit"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.1.2",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "replace-in-file": "^6.3.5",
    "rimraf": "^3.0.2",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "typescript": "4.7.4"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "size-limit": [
    {
      "path": "lib/**/*.js"
    }
  ]
}
