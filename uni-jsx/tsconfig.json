{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,
    "allowJs": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.js", "./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/mock*", "./src/**/*.spec.*"]
}
